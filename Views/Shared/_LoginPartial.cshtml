@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager
@if (signInManager.IsSignedIn(User))
{
    //ApplicationUser applicationUser = await userManager.GetUserAsync(User);
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Manage/Index" asp-area="Identity">Ciao @User.FindFirst("Nome").Value !</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" method="post" asp-page="/Account/Logout" asp-area="Identity">
                <button type="submit" style="transition-duration: 0s;" class="btn btn-link nav-link">Esci</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="btn btn-outline-secondary" style="margin-right: 10px;" asp-page="/Account/Register" asp-area="Identity">Registrati</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-secondary" asp-page="/account/Login" asp-area="Identity">Accedi</a>
        </li>
    </ul>
}