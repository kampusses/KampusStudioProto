@model AziendaModifyCfPivaAziendaInputModel
<h1>Azienda concessionaria</h1>
<div class="row">
    <div class="col-sm-10">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="PartitaIvaAzienda"></label>
                            <input type="text" asp-for="PartitaIvaAzienda" class="form-control form-control-lg" placeholder="Partita IVA">
                            <span asp-validation-for="PartitaIvaAzienda"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="CodiceFiscaleAzienda"></label>
                            <input type="text" asp-for="CodiceFiscaleAzienda" class="form-control form-control-lg" placeholder="Codice fiscale">
                            <span asp-validation-for="CodiceFiscaleAzienda"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <!--div class="form-group col-md-4"></div-->
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Modifica dati fiscali</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



