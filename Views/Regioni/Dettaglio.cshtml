@model RegioneViewModel
<div class="row">
    <div class="col-md-12">
        <h1>@Model.NomeRegione</h1>
        <h2>Capoluogo di Regione: <a asp-controller="Comuni" asp-action="Dettaglio" asp-route-id="@Model.Capoluogo.CodiceCatastale">@Model.Capoluogo.NomeComune</a></h2>
        <h2>Totale comuni: <a href="" title="vedi comuni">@Model.NComuni</a></h2>
        <h2>Totale abitanti: @Model.Abitanti.ToString("#,###,###")</h2>
        <br />
        <h3>Elenco Province:</h3>
        @foreach(ProvinciaViewModel provincia in Model.Province)
        {
            <h2><a asp-controller="Province" asp-action="Dettaglio" asp-route-id="@provincia.CodiceProvincia">@provincia.NomeProvincia (@provincia.SiglaProvincia)</a></h2>
        }
        <br />
        <a class="btn btn-outline-primary" onClick="history.go(-1);return true;"><i class="fas fa-chevron-left"></i> Torna indietro</a>
    </div>
</div>