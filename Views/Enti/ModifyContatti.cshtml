@model EnteModifyInputModel
<h1>Configurazione ente</h1>


<div class="row">
    <div class="col-sm-10">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-at"></i> CONTATTI</h5>
                <p class="card-text">In questa scheda Ã¨ possibile inserire o modificare i dati di contatto dell'ente in gestione.</p>
                <form method="post">
                    <input type="hidden" id="CodiceCatastale" name="CodiceCatastale" value="@Model.CodiceCatastale">
                    <input type="hidden" id="Toponimo" name="Toponimo" value="@Model.Toponimo">
                    <input type="hidden" id="Indirizzo" name="Indirizzo" value="@Model.Indirizzo">
                    <input type="hidden" id="Civico" name="Civico" value="@Model.Civico">
                    <input type="hidden" id="Lettera" name="Lettera" value="@Model.Lettera">
                    <input type="hidden" id="Localita" name="Localita" value="@Model.Localita">
                    <input type="hidden" id="PartitaIva" name="PartitaIva" value="@Model.PartitaIva">
                    <input type="hidden" id="CodiceFiscale" name="CodiceFiscale" value="@Model.CodiceFiscale">
                    <input type="hidden" id="TitoloResponsabile" name="TitoloResponsabile" value="@Model.TitoloResponsabile">
                    <input type="hidden" id="CognomeResponsabile" name="CognomeResponsabile" value="@Model.CognomeResponsabile">
                    <input type="hidden" id="NomeResponsabile" name="NomeResponsabile" value="@Model.NomeResponsabile">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Telefono"></label>
                            <input type="text" asp-for="Telefono" class="form-control form-control-lg" placeholder="Telefono">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Fax"></label>
                            <input type="text" asp-for="Fax" class="form-control form-control-lg" placeholder="Fax">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label asp-for="Email"></label>
                            <input type="text" asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label asp-for="Pec"></label>
                            <input type="text" asp-for="Pec" class="form-control form-control-lg" placeholder="Pec">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Modifica dati di contatto</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



