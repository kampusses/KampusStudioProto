@model EnteModifySedeLegaleInputModel
<h1>Configurazione ente</h1>
<div class="row">
    <div class="col-sm-10">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-map-marked-alt"></i> SEDE LEGALE</h5>
                <hr />
                <p class="card-text">Per modificare la sede legale del comune è necessario inserire i dati richiesti nel seguente modulo e confermarli premendo il relativo pulsante.</p>
                <hr />
                <form method="post">
                    <input type="hidden" id="CodiceCatastale" name="CodiceCatastale" value="@Model.CodiceCatastale">
                    <div class="form-row">
                        <div class="form-group col-md-2">
                            <label asp-for="Toponimo"></label>
                            <input type="text" asp-for="Toponimo" class="form-control form-control-lg" placeholder="Toponimo">
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Indirizzo"></label>
                            <input type="text" asp-for="Indirizzo" class="form-control form-control-lg" placeholder="Indirizzo">
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Civico"></label>
                            <input type="text" asp-for="Civico" class="form-control form-control-lg">
                        </div>
                        <div class="form-group col-md-2">
                            <label asp-for="Lettera"></label>
                            <input type="text" asp-for="Lettera" class="form-control form-control-lg" placeholder="Lettera">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label asp-for="Localita"></label>
                            <input type="text" asp-for="Localita" class="form-control form-control-lg" placeholder="Località">
                        </div>
                    </div>
                    <div class="form-row">
                        <!--div class="form-group col-md-8"></div-->
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Modifica sede legale</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



